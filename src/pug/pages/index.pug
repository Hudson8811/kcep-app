						.reels__item-icon(data-item="opt10b" title='Барабан 10б')
							img(src='images/reels/10-b-op.png')
					.reels__item
						.reels__item-icon(data-item="opt12a" title='Барабан 12а')
							img(src='images/reels/12-a-op.png')
					.reels__item
						.reels__item-icon(data-item="opt14" title='Барабан 14')
							img(src='images/reels/14op.png')
					.reels__item
						.reels__item-icon(data-item="opt14g" title='Барабан 14г')
							img(src='images/reels/14-g-op.png')
					.reels__item
						.reels__item-icon(data-item="opt17" title='Барабан 17')
							img(src='images/reels/17op.png')
					.reels__item
						.reels__item-icon(data-item="opt18a" title='Барабан 18а')
							img(src='images/reels/18-a-op.png')
					.reels__item
						.reels__item-icon(data-item="opt18b" title='Барабан 18б')
							img(src='images/reels/empty.png')
					.reels__item
						.reels__item-icon(data-item="opt20" title='Барабан 20')
							img(src='images/reels/20op.png')
					.reels__item
						.reels__item-icon(data-item="opt20a" title='Барабан 20а')
							img(src='images/reels/20-a-op.png')
					.reels__item
						.reels__item-icon(data-item="opt25" title='Барабан 25')
							img(src='images/reels/25op.png')

block vars
	-
		const page = {
			title: 'Главная'
		};

block main
	.container

		.truck-type
			.truck-type__item
				label
					input(type="radio" name="tuck_type" value="1" checked)
					span Еврофура
				label
					input(type="radio" name="tuck_type" value="2")
					span Камаз
				label
					input(type="radio" name="tuck_type" value="3")
					span Фургон
				label
					input(type="radio" name="tuck_type" value="4")
					span Свой размер

		.truck-calculator
			.truck-calculator__left
				.reels
					.reels__item
						.reels__item-icon(data-item="opt8" title='Барабан 8')
